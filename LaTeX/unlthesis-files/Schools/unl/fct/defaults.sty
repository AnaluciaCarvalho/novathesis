%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% UNL guidelines:
% The pages should be numbered consecutively at the bottom centre of the
% page.
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\makepagestyle{UNL@myvf} 
\makeoddfoot{UNL@myvf}{}{\thepage}{} 
\makeevenfoot{UNL@myvf}{}{\thepage}{} 
\makeheadrule{UNL@myvf}{\textwidth}{\normalrulethickness} 
\makeevenhead{UNL@myvf}{\small\textsc{\leftmark}}{}{} 
\makeoddhead{UNL@myvf}{}{}{\small\textsc{\rightmark}}
\pagestyle{UNL@myvf}
%
\frenchspacing

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%% Draw the cover page
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\def\coverpage{
\thispagestyle{empty}

%% Define cover page margins
\ifthenelse{%
	\equal{\UNL@doctype}{bsc}}{% BSc
		\def\@defcoverbg{\usethesiscover[bsc]}
		\newgeometry{tmargin=4cm,bmargin=1.3cm,lmargin=4.5cm,rmargin=3.3cm}
	}{%
\ifthenelse{%
	\equal{\UNL@doctype}{mscplan}%
	\OR\equal{\UNL@doctype}{msc}}{% MSc
		\def\@defcoverbg{\usethesiscover[msc]}
		\newgeometry{tmargin=4cm,bmargin=1.3cm,lmargin=4.5cm,rmargin=3.3cm}
	}{%
\ifthenelse{%
	\equal{\UNL@doctype}{phdplan}%
	\OR\equal{\UNL@doctype}{phdprop}%
	\OR\equal{\UNL@doctype}{phd}}{% PhD
    % \let\@defcoverbg=\thesiscover[phd]
    \def\@defcoverbg{\usethesiscover[phd]}
		\newgeometry{tmargin=4cm,bmargin=1.3cm,lmargin=5.5cm,rmargin=2.5cm}
	}
{	% Plain
	\newgeometry{tmargin=4cm,bmargin=1.3cm,lmargin=4.5cm,rmargin=3.3cm}
}}}


%% Add background image	
\AddToShipoutPicture*{\BackgroundPic{\@defcoverbg}}


%% Typeset the text over the background image
\begin{center}
  \fontfamily{phv}

% Name of Candidate
  \fontsize{15}{17}
  \selectfont
  \textbf{\@author}

\vspace{0.25cm}
% Academic qualifications
  \fontsize{12}{13}
  \selectfont
  \@authordegree

\vspace{4.25cm}
% Title of Dissertation
  \fontsize{18}{20}
  \selectfont
  \textbf{\UNL@title}\\[0.75cm]

\vspace{0.75cm}
% Degree
  \fontsize{12}{13}
  \selectfont
  \UNL@presentationtext

  \vfill
  % Advisers
  \fontsize{13}{14}
  \selectfont
  \printtheadvisers

\vfill\vfill
% only print the committee for the main classes
  \ifthenelse{%
    \equal{\UNL@doctype}{bsc}%
    \OR\equal{\UNL@doctype}{msc}%
    \OR\equal{\UNL@doctype}{phd}}
  {\hfill\fontsize{10}{11}\selectfont\printthecommittee}
  {}

\vfill\vfill\vfill

% Date
  \fontsize{12}{13}
  \selectfont
  \ifdraftdoc
    \textbf{DRAFT: \today}
  \else
    \textbf{\@themonth, \@theyear}
  \fi

\end{center}
\restoregeometry
\cleardoublepage
}
